{
  "builders": [{
    "name": "app2",
    "type": "docker",
    "image": "python:3",
    "commit": true,
    "volumes": {
      "/home/karasze/projects/dockerswarm" : "/usr/src/app"
    },
    "changes": [
       "WORKDIR /usr/src/app",    
       "ENV FLASK_APP app.py",
       "ENV FLASK_RUN_HOST 0.0.0.0",
       "ENV FLASK_RUN_PORT 8000",
       "EXPOSE 8000 5000",
       "ENTRYPOINT flask run"
    ]
  }],
  "provisioners": [{
     "type": "shell",
      "only": ["app2"],
      "inline": [
	 "cd /usr/src/app",
         "pip install --no-cache-dir -r requirements.txt",
	 "export FLASK_APP=app.py",
         "export FLASK_RUN_HOST=0.0.0.0",
         "export FLASK_RUN_PORT=8000",
         "flask run &"
      ]
  }],
  "post-processors": [
     [
       {
         "type": "docker-tag",
         "tag": "latest",
         "repository": "127.0.0.1:5000/app2",
         "only": ["app2"]
       },
       "docker-push"
     ]
  ]
}
